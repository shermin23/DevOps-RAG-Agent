# Environment Variables Reference

Copy this file to `.env.local` for local development.
For production, set these as environment variables in your deployment.

# ==========================================
# Google Gemini API Configuration
# ==========================================

# Your Google AI API key (get from https://ai.google.dev/)
# Development: Use free tier key
# Production: Use service account key
VITE_API_KEY=your_google_ai_api_key_here

# Alternative: Server-side API key (for Node.js/backend)
API_KEY=your_google_ai_api_key_here

# ==========================================
# Application Settings
# ==========================================

# Environment: development or production
NODE_ENV=development

# Number of search results to return
VITE_MAX_CHUNKS=3

# Document chunk size (characters)
VITE_CHUNK_SIZE=500

# LLM Model to use
VITE_LLM_MODEL=gemini-2.5-flash

# ==========================================
# Optional: Backend Configuration
# ==========================================

# If running with a backend server
VITE_API_URL=http://localhost:5000
VITE_API_TIMEOUT=30000

# Database URL (if using persistent storage)
DATABASE_URL=postgresql://user:pass@localhost:5432/rag_db

# ==========================================
# Optional: Vector Database (for scale)
# ==========================================

# Pinecone
PINECONE_API_KEY=
PINECONE_INDEX=rag-documents
PINECONE_ENVIRONMENT=us-west-2

# Or Weaviate
WEAVIATE_URL=http://localhost:8080

# Or Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ==========================================
# Optional: Monitoring & Analytics
# ==========================================

# Sentry error tracking
SENTRY_DSN=

# Datadog APM
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Google Analytics
VITE_GOOGLE_ANALYTICS_ID=

# ==========================================
# Optional: Authentication
# ==========================================

# OAuth / OIDC
VITE_AUTH_PROVIDER=none  # google, azure, okta, or none
VITE_AUTH_CLIENT_ID=
VITE_AUTH_CLIENT_SECRET=
VITE_AUTH_DOMAIN=

# JWT Secret (for backend)
JWT_SECRET=your-secret-key-here

# ==========================================
# Optional: Feature Flags
# ==========================================

# Enable/disable features
VITE_ENABLE_PERSISTENCE=false
VITE_ENABLE_MULTI_TENANT=false
VITE_ENABLE_CACHING=true
VITE_ENABLE_VECTOR_DB=false

# ==========================================
# Deployment-Specific
# ==========================================

# For Docker/Kubernetes
PORT=3000
LOG_LEVEL=info

# For Vercel
VERCEL_ENV=development
VERCEL_URL=

# For AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ==========================================
# Development Only
# ==========================================

# Enable verbose logging
DEBUG=rag-agent:*

# Disable CORS (local dev only)
VITE_DISABLE_CORS=true

# Mock LLM responses (testing)
VITE_MOCK_LLM=false
